//= depend_on_asset "header-brick.png"

$primary: #b61e2e;
$secondary: #e9ecef;

@import 'bootstrap';

$theme_primary: #b61e2e;
$theme_primary_trans: #b61e2eaa;

$theme_link_color: #ffffff;
$theme_link_color_hover: #ffffffcc;

$footer_height: 2em;

@import 'fonts';
@import 'universities';
@import 'users';
@import 'sessions';

html, body {
  margin: 0;
  padding: 0;
  height: 100%;
}

.page {
  min-height: 100%;
  position: relative;
}

.content-wrapper {
  padding-bottom: $footer_height;
}

.header {
	background: linear-gradient(0deg, $theme_primary_trans, $theme_primary_trans), url('<%= asset_path("header-brick.png") %>');
	background-repeat: repeat-x;
}

.header-link, .header-link:visited {
	color: $theme_link_color;
	text-decoration: none;
	font-family: 'SF Collegiate Solid Regular';
}

.header-link:hover, .header-link:active {
	color: $theme_link_color_hover;
	text-decoration: none;
}

.header-logo {
	width: 50px;
	height: 50px;
}

.advanced-search, .advanced-search:visited, .advanced-search:focus {
	background-color: Transparent;
	border: none;
	outline: none;
	color: $theme_link_color;
	text-decoration: underline;
	font-size: 9pt;
}

.advanced-search:hover, .advanced-search:active {
	outline: none;
	color: $theme_link_color_hover;
	text-decoration: none;
}

.footer {
  position: absolute;
  bottom: 0;
  height: $footer_height;
	background: $theme_primary;
	color: white;
	font-size: 10pt;
}

.footer-help, .footer-help:visited, .footer-help:focus {
	background-color: Transparent;
	border: none;
	outline: none;
	color: $theme_link_color;
	text-decoration: underline;
}

.footer-help:hover, .footer-help:active {
	outline: none;
	color: $theme_link_color_hover;
	text-decoration: none;
}

.pointer-cursor {
	cursor: pointer;
}

.no-focus-outline:focus {
	outline: none;
}
