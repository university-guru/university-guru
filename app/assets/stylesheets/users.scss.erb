.top-text{
    text-align: center;
}

.form-container{
    position: absolute;
    top: 15vh;
    background: #fff;
    padding: 30px;
    border-radius: 10px;
    box-shadow: 0px 0px 2px 0px #B11D2D;
    width: 95%;
}
.btn-primary, .btn-primary:active, .btn-primary:visited, .btn-primary:active:focus {
    background-color: #B11D2D !important;
    border-color: #B11D2D !important;
}
.btn-primary:hover{
    background-color: #EF273D !important;
    border-color: #EF273D !important;
}

.bg{
    width:100%;
    height:100vh;
    background-size: 100%;
}

@media only screen and (max-width: 678px){
    .bg{
        background-size: 300%;
    }
}
